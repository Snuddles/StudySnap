{
  "compilerOptions": {
    "target": "es6", // Modern JS features
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false, // Disallow JavaScript if the project is strictly TypeScript
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src" // Simplify imports
  },
  "include": ["src"]
}
